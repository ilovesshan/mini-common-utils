/* custom-tab-bar/custom-tab-bar.wxss */
.custom-tab-bar-container {
  width: 100%;
  /* height: 98rpx; */
  display: flex;
  flex-direction: row;
  padding-bottom: constant(safe-area-inset-bottom); /*兼容 IOS<11.2*/
  padding-bottom: env(safe-area-inset-bottom); /*兼容 IOS>11.2*/
  background-color: #f1f3f5;
}

.custom-tab-bar-container-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.custom-tab-bar-container-item-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 6rpx 0;
}

.custom-tab-bar-container-item-text {
  font-size: 28rpx;
  flex: 1;
  color: #515151;
}

.custom-tab-bar-container-item-text.active {
  color: #1afa29;
}