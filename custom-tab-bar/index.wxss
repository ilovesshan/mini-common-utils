/* custom-tab-bar/custom-tab-bar.wxss */
.custom-tab-bar-container {
  width: 100%;
  height: 98rpx;
  background-color: red;
  display: flex;
  flex-direction: row;
}

.custom-tab-bar-container-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f1f3f5;
}

.custom-tab-bar-container-item-icon {
  width: 50rpx;
  height: 50rpx;
  margin: 10rpx 0;
}

.custom-tab-bar-container-item-text {
  font-size: 28rpx;
  flex: 1;
  color: #515151;
}

.custom-tab-bar-container-item-text.active {
  color: #1afa29;
}